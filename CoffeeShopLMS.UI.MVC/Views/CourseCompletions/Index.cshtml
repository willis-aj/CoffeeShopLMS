@model IEnumerable<CoffeeShopLMS.DATA.EF.CourseCompletion>

@{
    ViewBag.Title = "Course Completions";
}

<h2>@ViewBag.Title</h2>

<a class="btn btn-primary" href=@Url.Action("PersonalProgress", "CourseCompletions")>View Personal Course Completions</a>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateCompleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cours.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserDet.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cours.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDet.FirstName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.CourseCompletionID })
                @if (User.IsInRole("Admin"))
                {
                    <span>
                        |
                        @Html.ActionLink("Edit", "Edit", new { id = item.CourseCompletionID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CourseCompletionID })
                    </span>
                }
            </td>
        </tr>
    }

</table>
